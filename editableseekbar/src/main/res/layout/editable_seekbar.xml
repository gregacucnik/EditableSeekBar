<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/esbTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/esbTitle">

    <com.gregacucnik.editableseekbar.EsbEditText
        android:id="@+id/esbEditText"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_alignParentEnd="true"
        android:text=""
        android:imeOptions="actionDone"
        android:inputType="numberSigned" />

    <com.gregacucnik.editableseekbar.EsbSeekBar
        android:id="@+id/esbSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/esbEditText"
        android:layout_centerVertical="true"
        android:paddingTop="6dp"
        android:paddingBottom="6dp"
        android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>